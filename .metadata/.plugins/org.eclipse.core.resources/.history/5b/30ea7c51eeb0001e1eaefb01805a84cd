package g_Chapter06;

// 사칙연산 클래스
// : 두개의 값을 매개변수로 전달받아 사칙연산 수행
// : add, subtract, multply, divide의 4개 메서드
class MyMath {
	int add(int a, int b);{ return a + b;}
	int subtrcat(int a, int b);{ return a - b;}
	int multply(int a, int b);{ return a * b;}
	double divide(int a, int b);{ return a / b;}
	
}
public class Method03 {

	public static void main(String[] args) {
		MyMath mm = new MyMath();// 인스턴스 생성
		
		// 메서드의 실행 흐름
		// 1. main메서드에서 메서드 add를 호출 - 인자를 매개변수에 전달
		int value = mm.add(10, 20); // 메서드 호출

	}

}
