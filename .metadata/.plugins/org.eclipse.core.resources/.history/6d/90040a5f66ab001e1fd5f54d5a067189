package c_Chapter02;

// 반복문(Loop)
// : 어떤 작업을 반복적으로 실행하고 싶을 때 사용

// 자바 반복문의 종류
// : for, while, do-while

public class C_For {

	public static void main(String[] args) {
		// for 문
		// : 특정 조건이 만족될 때까지 코드 블록을 반복 실행
		// : 규칙이 있는 작업을 반복하는 제어문
		// : 반복 횟수가 정해저 있을 때 사용
		
		// 기봊구조
		for () {
			조건이 만족될 때까지 실행할 코드
		}
	}

}
